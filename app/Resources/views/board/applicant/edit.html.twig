{% extends '::board/base.html.twig' %}

{% block body %}
    <div id="main" role="main">
        <div id="ribbon">
            <ol class="breadcrumb">
                <li>Home</li><li>Applicant</li><li>Edit</li>
            </ol>
        </div>

        <div id="content">

            <div class="jarviswidget jarviswidget-sortable" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" role="widget">
                <header role="heading">
                    <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                    <h2>Applicant edit</h2>
                </header>

                <div role="content">

                    <form action="{{ path('applicant_edit', { 'id': applicant.id }) }}" method="post">

                        Address:
                        <br>
                        {{ form_widget(edit_form.address) }}
                        <br>
                        <br>

                        Phone:
                        <br>
                        {{ form_widget(edit_form.phone) }}
                        <br>
                        <br>

                        First Name:
                        <br>
                        {{ form_widget(edit_form.first_name) }}
                        <br>
                        <br>

                        Last Name:
                        <br>
                        {{ form_widget(edit_form.last_name) }}
                        <br>
                        <br>

                        Job Vacancy:
                        <br>
                        {{ form_widget(edit_form.jobVacancy) }}
                        <br>

                        {{ form_widget(edit_form._token) }}

                        <br>
                        <input class="btn btn-primary" type="submit" value="Edit" />
                    </form>
                    <br>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                    <br>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
