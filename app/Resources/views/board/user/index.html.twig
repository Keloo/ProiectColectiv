{% extends '::board/base.html.twig' %}

{% block body %}
    <div id="main" role="main">
        <div id="ribbon">
            <ol class="breadcrumb">
                <li>Home</li><li>Employees</li>
            </ol>
        </div>

        <div id="content">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>First_name</th>
                    <th>Last_name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Work start date</th>
                    <th>Work end date</th>
                    <th>Hours worked</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.address }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{% if user.workStartDate %}{{ user.workStartDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if user.workEndDate %}{{ user.workEndDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ user.hoursWorked }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('employee_show', { 'id': user.id }) }}">show</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
