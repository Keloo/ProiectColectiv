{% extends 'base.html.twig' %}

{% block body %}
    <h1>Associate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ associate.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ associate.firstname }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ associate.lastname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ associate.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ associate.address }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('associate_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('associate_edit', { 'id': associate.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
